<div class="jam-card-wrapper">
<% if jamm.photo? %>
<%= link_to jamm_path(jamm) do %>
  <%= cl_image_tag jamm.photo, class: "instrument-card4" %>
     <% end %>
  <% else %>
  <%= link_to jamm_path(jamm) do %>
    <%= cl_image_tag src="https://source.unsplash.com/collection/572418/free-concert-stock-photos", class: "instrument-card1" %>
  <% end %>
     </li>
  <% end %>
    <div class="card-header">
      <p><%= jamm.title %></p>
    </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
            <%= jamm.description.truncate(27) %>

            </li>
          <li class="list-group-item">
            <%= jamm.location.truncate(20) %>

            <li class="list-group-item">
            <i class="fas fa-calendar-alt"></i><%= jamm.date %>
            <i class="fas fa-users"></i><%= jamm.capacity %> <% if jamm.capacity == jamm.participations.where(status: 'Accepted').size %>
              <span style="color:red;"><strong> FULL </strong></span><% end %>
            <i class="fas fa-clock"></i><%= jamm.duration %> hr</li>
            <li class="list-group-item">
            <%= User.find(jamm.creator_id).email.truncate(15) %>
            </li>
            <% if policy(jamm).edit? %>
            <li class="list-group-item">
              <%= link_to "Edit", edit_jamm_path(jamm) %>
            <% end %>
          <% if policy(jamm).destroy? %>
            <%= link_to "Delete", jamm_path(jamm), method: :delete, data: { confirm: "Are you sure?" } %>
              <% end %>
            </li>
          <% if policy(jamm).review? %>
            <li class="list-group-item"><%= link_to "Review this jam", new_jamm_review_path(jamm) %></li><% end %>

      </ul>

</div>
